			"event": [
				{
					"listen": "test",
					"script": {
						"id": "2ad469a9-dd92-43b4-97b1-0e60a6509dfb",
						"exec": [
							"pm.test(\"Successful response\", function () {",
							"    pm.expect(pm.response.text()).to.include(\"success\");",
							"});",
							"var json = pm.response.json();",
							"pm.environment.set(\"id\", json.data.id);"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
